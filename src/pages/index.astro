<style lang="scss">
  .fade-in {
    @apply animate-fade-up animate-ease-in-out animate-duration-[800ms];
  }

  #scroll-hint {
    @apply hidden;
    @screen md {
      @apply block;
    }
  }

  #too-small-hint {
    @media (min-width: 375px) {
      @apply hidden;
    }
  }

  section {
    @apply py-16;
  }

  p {
    @apply leading-relaxed;
  }

  hr {
    @apply my-16;
  }
</style>
